<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.yjz.widget.nav.SuperSmoothBottomBar
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/bottomBar1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:ssb_menu="@menu/home_bottom_nav_menu"
        app:ssb_orientation="horizontal"
        app:ssb_iconTintActive="#B014BB"
        app:ssb_iconSize="20dp"
        app:ssb_roundCorners="all"
        app:ssb_backgroundColor="#FFFFFF"
        app:ssb_barCornerRadius="20dp"
        app:ssb_indicatorColor="#FFE082"
        app:ssb_indicatorRadius="10dp"
        app:ssb_indicatorMarginVertical="8dp"
        app:ssb_itemPadding="4dp"
        app:ssb_textSize="10sp" />

    <com.github.yjz.widget.nav.SuperSmoothBottomBar
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomBar1"
        android:id="@+id/bottomBar2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        app:ssb_menu="@menu/home_bottom_nav_menu"
        app:ssb_orientation="vertical"
        app:ssb_iconTintActive="#B014BB"
        app:ssb_roundCorners="topLeft|bottomRight"
        app:ssb_backgroundColor="#FFFFFF"
        app:ssb_barCornerRadius="20dp"
        app:ssb_indicatorColor="#41B83D"
        app:ssb_indicatorRadius="10dp"
        app:ssb_indicatorMarginVertical="8dp"
        app:ssb_itemPadding="4dp"
        app:ssb_textSize="10sp" />

</androidx.constraintlayout.widget.ConstraintLayout>

